div.create-container
  form(action="/posts",  method="post")
    label(for='post') Name Your Post
    input(type="text", placeholder="Name", required="required", name="post")
    br
    label(for='image') image of your spot
    input#image.custom-file-input(type='file' name='image')
    br
    label(for='description') description
    input(type='text', placeholder='Description', required='required', name='description')
    br
    label(for='location') location of your spot
    input(type='text', placeholder='Address or Coordinates', required='required', name='location')
    br
    button Create
